<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="@color/teal200"
    android:backgroundTint="@color/teal200">

    <ImageView
        android:id="@+id/imageViewFirebase"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/account_box" />

    <TextView
        android:id="@+id/textViewFirebaseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewFirebaseAge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageViewFirebase"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/textViewFirebaseEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageViewFirebase"
        app:layout_constraintTop_toBottomOf="@+id/textViewFirebaseAge"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/textViewFirebaseAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewFirebaseEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageViewFirebase"
        app:layout_constraintTop_toBottomOf="@+id/textViewFirebaseName"
        app:layout_constraintVertical_bias="0.5" />

    <ProgressBar
        android:id="@+id/progressBarFirebase"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:foregroundTint="@color/black"
        android:indeterminateTint="@color/black"
        android:progressBackgroundTint="@color/black"
        android:progressTint="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewFirebase"
        app:layout_constraintEnd_toEndOf="@+id/imageViewFirebase"
        app:layout_constraintStart_toStartOf="@+id/imageViewFirebase"
        app:layout_constraintTop_toTopOf="@+id/imageViewFirebase" />

</androidx.constraintlayout.widget.ConstraintLayout>